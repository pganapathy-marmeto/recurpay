{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .product-collection-section {
    background-color: {{ section.settings.background_color }};
  }

  .product-collection-section .section-heading {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: {{ section.settings.heading_spacing }}px;
    padding-top: 30px;
  }

  .product-collection-section .section-subtitle {
    color: {{ section.settings.subtitle_color }};
    font-size: {{ section.settings.subtitle_size }}px;
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: {{ section.settings.subtitle_spacing }}px;
  }

  .product-collection-section .products-grid {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    gap: {{ section.settings.grid_gap }}px;
  }

  .product-collection-section .product-card-item {
    position: relative;
    display: flex;
    flex-direction: column;
  }

  @media screen and (max-width: 749px) {
    .product-collection-section .products-grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: {{ section.settings.grid_gap_mobile }}px;
    }
    
    .product-collection-section .section-heading {
      font-size: {{ section.settings.heading_size_mobile }}px;
    }
    
    .product-collection-section .section-subtitle {
      font-size: {{ section.settings.subtitle_size_mobile }}px;
    }
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
  assign products_to_display = section.settings.products_to_show
  if section.settings.collection != blank
    if section.settings.collection.all_products_count < products_to_display
      assign products_to_display = section.settings.collection.all_products_count
    endif
  endif
-%}

<section class="product-collection-section color-{{ section.settings.color_scheme }} section-{{ section.id }}-padding">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <h2 class="section-heading">
        {{ section.settings.title }}
      </h2>
    {%- endif -%}

    {%- if section.settings.subtitle != blank -%}
      <p class="section-subtitle">
        {% if collection.description != blank %}
          {{ collection.description }}
        {% else %}
          {{ section.settings.subtitle }}
        {% endif %}
      </p>
    {%- endif -%}

    {%- if section.settings.collection != blank and section.settings.collection.products.size > 0 -%}
      <div class="products-grid">
        {%- for product in section.settings.collection.products limit: products_to_display -%}
          <div class="product-card-item">
            {% render 'render-product',
              card_product: product,
              show_badge: section.settings.show_best_seller_badge,
              badge_text: section.settings.badge_text,
              badge_background_color: section.settings.badge_background_color,
              badge_text_color: section.settings.badge_text_color,
              badge_padding: section.settings.badge_padding,
              badge_border_radius: section.settings.badge_border_radius,
              badge_font_size: section.settings.badge_font_size
            %}
          </div>
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="products-grid">
        {%- for i in (1..products_to_display) -%}
          <div class="product-card-item">
            {%- assign placeholder_image = 'product-apparel-' | append: forloop.rindex -%}
            {% render 'render-product',
              placeholder_image: placeholder_image
            %}
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</section>

