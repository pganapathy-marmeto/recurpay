
{%  style  %}
.features-grid-section {
  padding: 0 20px 80px 20px;
  background: #ffffff;
}

.features-grid-wrapper {
  max-width: 1200px;
  margin: 0 auto;
}

.features-grid-heading {
  text-align: center;
  font-size: 36px;
  font-weight: 700;
  margin-bottom: 48px;
  margin-top: 0;
  color: #0b1c2d;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat({{ section.settings.columns | default: 3 }}, 1fr);
  gap: 32px;
}

.feature-card {
  background: #ffffff;
  border: 1px solid #eaeaea;
  border-radius: 16px;
  padding: 36px 24px;
  text-align: center;
}

.feature-icon {
  font-size: 36px;
  margin-bottom: 16px;
}

.feature-title {
  font-size: 18px;
  font-weight: 600;
  margin-bottom: 8px;
  color: #0b1c2d;
}

.feature-description {
  font-size: 14px;
  color: #6b7280;
  line-height: 1.6;
}

@media (max-width: 1024px) {
  .features-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 640px) {
  .features-grid {
    grid-template-columns: 1fr;
  }

  .features-grid-heading {
    font-size: 28px;
  }
}
{% endstyle %}

<section class="features-grid-section">
  <div class="features-grid-wrapper">

    {% if section.settings.heading != blank %}
      <h2 class="features-grid-heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    <div class="features-grid">
      {% for block in section.blocks %}
        <div class="feature-card" {{ block.shopify_attributes }}>
          
          {% if block.settings.icon != blank %}
            <div class="feature-icon">
              {{ block.settings.icon }}
            </div>
          {% endif %}

          {% if block.settings.title != blank %}
            <h3 class="feature-title">
              {{ block.settings.title }}
            </h3>
          {% endif %}

          {% if block.settings.description != blank %}
            <p class="feature-description">
              {{ block.settings.description }}
            </p>
          {% endif %}

        </div>
      {% endfor %}
    </div>

  </div>
</section>


{% schema %}
{
  "name": "Features Grid",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "What You Get with Recurpay"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Number of Columns",
      "options": [
        {
          "value": "2",
          "label": "2 Columns"
        },
        {
          "value": "3",
          "label": "3 Columns"
        }
      ],
      "default": "3"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Card",
      "limit": 6,
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (Emoji or Text)",
          "default": "ðŸš€"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Quick Setup"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Get started in minutes with our easy installation wizard"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features Grid",
      "blocks": [
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" },
        { "type": "feature" }
      ]
    }
  ]
}
{% endschema %}
