{% style %}
.testimonial-section {
  padding: 80px 20px;
  background: #ffffff;
}

.testimonial-wrapper {
  max-width: 900px;
  margin: 0 auto;
  text-align: center;
}

.testimonial-card {
  background: #ffffff;
  border-radius: 16px;
  padding: 48px 40px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.05);
  margin-bottom: 32px;
}

.testimonial-stars {
  color: #f59e0b;
  font-size: 20px;
  margin-bottom: 20px;
}

.testimonial-text {
  font-size: 18px;
  line-height: 1.7;
  color: #374151;
  max-width: 700px;
  margin: 0 auto 32px;
}

.testimonial-author {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 14px;
}

.author-avatar {
  width: 44px;
  height: 44px;
  border-radius: 50%;
  background: #0ea56f;
  color: #ffffff;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
}

.author-name {
  font-weight: 600;
  color: #0b1c2d;
  text-align: left;
}

.author-role {
  font-size: 13px;
  color: #6b7280;
  text-align: left;
}

.testimonial-back {
  display: inline-block;
  margin-top: 12px;
  font-size: 14px;
  color: #6b7280;
  text-decoration: none;
}

@media (max-width: 768px) {
  .testimonial-card {
    padding: 36px 24px;
  }

  .testimonial-text {
    font-size: 16px;
  }
}
{% endstyle %}

<section class="testimonial-section">
  <div class="testimonial-wrapper">

    <div class="testimonial-card">

      {% if section.settings.stars > 0 %}
        <div class="testimonial-stars">
          {% for i in (1..section.settings.stars) %}
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="#f59e0b" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-star-icon lucide-star"><path d="M11.525 2.295a.53.53 0 0 1 .95 0l2.31 4.679a2.123 2.123 0 0 0 1.595 1.16l5.166.756a.53.53 0 0 1 .294.904l-3.736 3.638a2.123 2.123 0 0 0-.611 1.878l.882 5.14a.53.53 0 0 1-.771.56l-4.618-2.428a2.122 2.122 0 0 0-1.973 0L6.396 21.01a.53.53 0 0 1-.77-.56l.881-5.139a2.122 2.122 0 0 0-.611-1.879L2.16 9.795a.53.53 0 0 1 .294-.906l5.165-.755a2.122 2.122 0 0 0 1.597-1.16z"/></svg>
          {% endfor %}
        </div>
      {% endif %}

      {% if section.settings.testimonial_text != blank %}
        <p class="testimonial-text">
          “{{ section.settings.testimonial_text }}”
        </p>
      {% endif %}

      <div class="testimonial-author">
        {% if section.settings.author_initials != blank %}
          <div class="author-avatar">
            {{ section.settings.author_initials }}
          </div>
        {% endif %}

        <div class="author-info">
          <div class="author-name">
            {{ section.settings.author_name }}
          </div>
          <div class="author-role">
            {{ section.settings.author_role }}
          </div>
        </div>
      </div>

    </div>

    {% if section.settings.back_link_text != blank %}
      <a href="{{ section.settings.back_link_url }}" class="testimonial-back">
        ← {{ section.settings.back_link_text }}
      </a>
    {% endif %}

  </div>
</section>



{% schema %}
{
  "name": "Testimonial Card",
  "settings": [
    {
      "type": "range",
      "id": "stars",
      "label": "Star Rating",
      "min": 0,
      "max": 5,
      "step": 1,
      "default": 5
    },
    {
      "type": "textarea",
      "id": "testimonial_text",
      "label": "Testimonial Text",
      "default": "Recurpay transformed our subscription business. We saw a 40% increase in subscriber retention within the first 3 months. The team is incredibly responsive and the platform just works!"
    },
    {
      "type": "text",
      "id": "author_initials",
      "label": "Author Initials",
      "default": "JM"
    },
    {
      "type": "text",
      "id": "author_name",
      "label": "Author Name",
      "default": "Jessica Miller"
    },
    {
      "type": "text",
      "id": "author_role",
      "label": "Author Role",
      "default": "Founder, Bloom Beauty Box"
    },
    {
      "type": "text",
      "id": "back_link_text",
      "label": "Back Link Text",
      "default": "Back to Home"
    },
    {
      "type": "url",
      "id": "back_link_url",
      "label": "Back Link URL"
    }
  ],
  "presets": [
    {
      "name": "Testimonial Card"
    }
  ]
}
{% endschema %}
