{% style %}
  .completion-cta {
    padding: 80px 20px;
    background: #ffffff;
    text-align: center;
  }

  .completion-cta__wrapper {
    max-width: 800px;
    margin: 0 auto;
  }

  .completion-cta__icon {
    width: 72px;
    height: 72px;
    margin: 0 auto 24px;
    border-radius: 50%;
    background: #ecfff5;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36px;
  }

  .completion-cta__heading {
    font-size: 40px;
    font-weight: 700;
    color: #0b1c2d;
    margin-bottom: 12px;
  }

  .completion-cta__description {
    font-size: 18px;
    color: #6b7280;
    margin-bottom: 32px;
  }

  .completion-cta__buttons {
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
  }

  .completion-cta__button {
    padding: 14px 24px;
    font-size: 15px;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 200px;
  }

  .completion-cta__button--primary {
    background: #0ea56f;
    color: #ffffff;
    box-shadow: 0 8px 20px rgba(14, 165, 111, 0.25);
  }

  .completion-cta__button--secondary {
    background: #ffffff;
    color: #0b1c2d;
    border: 1px solid #e5e7eb;
  }

  @media (max-width: 768px) {
    .completion-cta__heading {
      font-size: 32px;
    }

    .completion-cta__button {
      width: 100%;
    }
  }
{% endstyle %}

<section class="completion-cta">
  <div class="completion-cta__wrapper">

    {% if section.settings.icon != blank %}
      <div class="completion-cta__icon">
        {{ section.settings.icon }}
      </div>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="completion-cta__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.description != blank %}
      <p class="completion-cta__description">
        {{ section.settings.description }}
      </p>
    {% endif %}

    <div class="completion-cta__buttons">
      {% if section.settings.primary_button_text != blank %}
        <a href="{{ section.settings.primary_button_link }}" class="completion-cta__button completion-cta__button--primary">
          {{ section.settings.primary_button_text }}
        </a>
      {% endif %}

      {% if section.settings.secondary_button_text != blank %}
        <a href="{{ section.settings.secondary_button_link }}" class="completion-cta__button completion-cta__button--secondary">
          {{ section.settings.secondary_button_text }}
        </a>
      {% endif %}
    </div>

  </div>
</section>


