{% style %}
  .completion-cta {
    padding: 80px 20px;
    background: #ffffff;
    text-align: center;
  }

  .completion-cta__wrapper {
    max-width: 800px;
    margin: 0 auto;
  }

  .completion-cta__icon {
    width: 72px;
    height: 72px;
    margin: 0 auto 24px;
    border-radius: 50%;
    background: #ecfff5;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 36px;
  }

  .completion-cta__heading {
    font-size: 40px;
    font-weight: 700;
    color: #0b1c2d;
    margin-bottom: 12px;
  }

  .completion-cta__description {
    font-size: 18px;
    color: #6b7280;
    margin-bottom: 32px;
  }

  .completion-cta__buttons {
    display: flex;
    justify-content: center;
    gap: 16px;
    flex-wrap: wrap;
  }

  .completion-cta__button {
    padding: 14px 24px;
    font-size: 15px;
    font-weight: 600;
    border-radius: 8px;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 200px;
  }

  .completion-cta__button--primary {
    background: #0ea56f;
    color: #ffffff;
    box-shadow: 0 8px 20px rgba(14, 165, 111, 0.25);
  }

  .completion-cta__button--secondary {
    background: #ffffff;
    color: #0b1c2d;
    border: 1px solid #e5e7eb;
  }

  @media (max-width: 768px) {
    .completion-cta__heading {
      font-size: 32px;
    }

    .completion-cta__button {
      width: 100%;
    }
  }
{% endstyle %}

<section class="completion-cta">
  {% comment %} <div class="completion-cta__wrapper">

    {% if section.settings.icon != blank %}
      <div class="completion-cta__icon">
        {{ section.settings.icon }}
      </div>
    {% endif %}

    {% if section.settings.heading != blank %}
      <h2 class="completion-cta__heading">
        {{ section.settings.heading }}
      </h2>
    {% endif %}

    {% if section.settings.description != blank %}
      <p class="completion-cta__description">
        {{ section.settings.description }}
      </p>
    {% endif %}

    <div class="completion-cta__buttons">
      {% if section.settings.primary_button_text != blank %}
        <a href="{{ section.settings.primary_button_link }}" class="completion-cta__button completion-cta__button--primary">
          {{ section.settings.primary_button_text }}
        </a>
      {% endif %}

      {% if section.settings.secondary_button_text != blank %}
        <a href="{{ section.settings.secondary_button_link }}" class="completion-cta__button completion-cta__button--secondary">
          {{ section.settings.secondary_button_text }}
        </a>
      {% endif %}
    </div>

  </div> {% endcomment %}
  <div class="hero-content">
      <div class="hero-badge">
      {{ section.settings.icon }}  
      {{ section.settings.tag_text }}
      </div>

      <h1 class="hero-title">
        {{ section.settings.heading }}
      </h1>
      
      <p class="hero-subtitle">
        {{ section.settings.description }}
      </p>

      <div class="cta-container">
        <a href="{{ section.settings.primary_button_link }}" class="cta-primary" data-media-type="banani-button">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-zap-icon lucide-zap"><path d="M4 14a1 1 0 0 1-.78-1.63l9.9-10.2a.5.5 0 0 1 .86.46l-1.92 6.02A1 1 0 0 0 13 10h7a1 1 0 0 1 .78 1.63l-9.9 10.2a.5.5 0 0 1-.86-.46l1.92-6.02A1 1 0 0 0 11 14z"/></svg>  
          {{ section.settings.primary_button_text }}
          </a>
        
        <div class="cta-secondary-group">
          <a href="{{ section.settings.secondary_button_link }}" class="cta-secondary" data-media-type="banani-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="#6b7280" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-calendar-icon lucide-calendar"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/></svg>  
          {{section.settings.secondary_button_text}}
          </a>
          <button class="cta-chat" data-media-type="banani-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 24 24" fill="none" stroke="#3d8f70" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-message-circle-icon lucide-message-circle"><path d="M2.992 16.342a2 2 0 0 1 .094 1.167l-1.065 3.29a1 1 0 0 0 1.236 1.168l3.413-.998a2 2 0 0 1 1.099.092 10 10 0 1 0-4.777-4.719"/></svg>  
          Live chat
          </button>
        </div>
      </div>

    </div>
</section>


{% schema %}
  {
    "name": "Completion CTA",
    "settings": [
      {
        "type": "html",
        "id": "icon",
        "label": "SVG"
      },
      {
        "type": "text",
        "id": "tag_text",
        "label": "tag text",
        "default": "our Completed Successfully"
      },{
        "type": "richtext",
        "id": "heading",
        "label": "heading",
        "default": "<p>Ready to transform your<br>subscription experience?</p>"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description",
        "default": "You've seen how Recurpay helps you capture more revenue and retain customers.Join 6,500+ merchants growing their business with us."
      },
      {
        "type": "text",
        "id": "primary_button_text",
        "label": "Primary Button Text",
        "default": "Start 14-Day Free Trial"
      }, {
        "type": "url",
        "id": "primary_button_link",
        "label": "Primary Button Link"
      }, {
        "type": "text",
        "id": "secondary_button_text",
        "label": "Secondary Button Text",
        "default": "Book a Demo"
      }, {
        "type": "url",
        "id": "secondary_button_link",
        "label": "Secondary Button Link"
      }
    ],
    "presets": [
      {
        "name": "Completion CTA"
      }
    ]
  }
{% endschema %}